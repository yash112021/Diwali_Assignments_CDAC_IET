package com.demo.service;

import java.util.Scanner;

import com.demo.dao.DaoInterface;
import com.demo.dao.DaoInterfaceImpl;

public class ServiceInterfaceImpl implements ServiceInterface{
	Scanner sc=new Scanner(System.in);
	
	// making the object of the dao inside the constructor 
	DaoInterface edao;
	
	// default constructor 
	public ServiceInterfaceImpl() {
		//		super();
		edao =new DaoInterfaceImpl();
	}

	
	// check prime Number
	@Override
	public boolean checkPrime() {
		System.out.println("Enter the Number to check Whether it is Prime Number or Not");
		int n =sc.nextInt();
		return edao.checkPrime(n);
	}

}
