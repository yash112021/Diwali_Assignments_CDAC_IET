package dom.demo.Test;

import java.util.Scanner;

import com.demo.service.ServiceInterface;
import com.demo.service.ServiceInterfaceImpl;

public class Test1 {
		public static void main(String args[]) {
			
			Scanner sc=new Scanner(System.in);
			
			// making the object of service class by using the interface the refernce object
			ServiceInterface serv=new ServiceInterfaceImpl();
			
			// pratice Questions
			
			// making the switch case
			int choice =0;
			
			System.out.println("Enter your choice ");
			do {
				
				System.out.println("\n1. Check if a Number is Prime \n2. Generate a Prime Number upto N");
				System.out.println("\n3. Calcualate Factorial of a Number \n4. Generate Fibonaci Series upto N");
				System.out.println("\n5. Check if a Number is even or Odd \n <-- Enter your choice -->");
				choice=sc.nextInt();
				// switch case
				
				switch (choice ) {
				
				
					// check if a Number is prime or not
					case 1 ->{
						System.out.println("Enter the Number to check Whether it is Prime Number or Not");
						int n =sc.nextInt();
						boolean status=serv.checkPrime(n);
						if(status) {
							System.out.println(" Prime Number ");
						}else {
							System.out.println(" NOT A PRiME NUMBER");
						}
					}
					
					//  now generate the prime numbers from the upto n  
					case 2 ->{
						System.out.print("Enter the Nth Number to find the PrimeNumbers--> ");
					}
					
					
					// Calculate the factorial of a Number
					case 3 ->{
						System.out.print("Number For Factorial-----------> ");
						int z=sc.nextInt();
						int result=serv.fact(z);
						System.out.println(" Factorial of A Number -->"+ result);
							
						}
					
					// gnerate the fiboancace series
					case 4 ->{
						System.out.print("Enter the Fibonaci Nth number --> ");
						int n=sc.nextInt();
						// now this will return us the array
						int resfib[] =serv.fibonacii(n);
						// using the for loop for printnig the array
						if(resfib != null) {
							for(int i=0;i<resfib.length;i++) {
								System.out.print(resfib[i] +" ");
							}
						}
					}
					// check if a Number is Even or odd
					case 5 ->{
						System.out.println("Enter A Number");
						int n=sc.nextInt();
						boolean status=serv.EvenOdd(n);
								if(status) {
									System.out.println("**** Even  Number ***** -->"+n);
								}else {
									System.out.println(" *** ODD NUMBER *** --> "+n);
								}
								
					}
//					case 6 ->{
//						
//					}
				
				} // swtich close 
				
				
				
				
				
				
			} while(choice != 6);
			
			
			
		}
}
